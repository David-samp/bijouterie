{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Accueil
{% endblock %}

{% block TitrePage%}
    Accueil
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    <div class="row">
    {% for article in articles%}
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ article.nom }}</h5>
                </div>
                <img src="{{ asset('upload/') }}{{ article.photo }}" alt="" class="img-fluid">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <div class="card-body">
                    <a href="{{ path('addPanier', {id:article.id}) }}" class="card-link"><i class="fas fa-lg fa-cart-arrow-down"></i> Ajouter au panier</a>
                </div>
                <div class="card-footer text-muted">
                    {{ article.prix }} â‚¬
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

